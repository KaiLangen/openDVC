#!/bin/bash

# variables
rec=rec4.yuv
dir=$1
orig=$2
nframes=200

cp $dir/stats.dat .

# exe [bit-stream file] [key file] [original file] [channel] [SI method] [optional: helper file]
# SI METHODS:
# 1 - separate
# 2 - luma first
# 3 - chroma first
#./deDVC $dir/wz_y.bin $dir/$rec $dir/$orig y 1
./deDVC $dir/wz_u.bin $dir/$rec $dir/$orig u 2 $dir/wz_y
./deDVC $dir/wz_v.bin $dir/$rec $dir/$orig v 2 $dir/wz_y
./mux $dir/wz_y $dir/wz_u $dir/wz_v $dir/wz.yuv $nframes
